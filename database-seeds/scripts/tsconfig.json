{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"lib": [
			"ES2019"
		],
		"declaration": true,
		"strict": false,
		"allowJs": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"outDir": "./js",
		"baseUrl": "src",
		// USE TS-NODE!
		"noEmit": true,
		"typeRoots": [
			"@types",
			"node_modules/@types"
		],
	},
	"exclude": [
		"node_modules",
	]
}