{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"lib": [
			"ES2019"
		],
		"declaration": true,
		"outDir": "./js",
		"strict": true,
		"allowJs": false,
		"esModuleInterop": true,
		"typeRoots": [
			"@types"
		],
		"sourceMap": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.test.ts"
	],
	"exclude": [
		"src/legacy/**/*.ts"
	]
}