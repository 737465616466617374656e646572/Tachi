{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"lib": [
			"ES2019"
		],
		"declaration": true,
		"strict": true,
		"allowJs": false,
		"esModuleInterop": true,
		"sourceMap": true,
		"outDir": "./js",
		"typeRoots": [
			"@types",
			"node_modules/@types"
		],
	},
	"include": [
		"src/**/*.ts",
	],
	"exclude": [
		"node_modules",
	]
}